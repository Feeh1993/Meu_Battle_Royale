<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/bordas_brancas"
    tools:context="mbr.com.meubattleroyale.VIEW.DIALOG.NovaMensagem">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/branco"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitulo_NM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Enviar Mensagem para..."
            android:textColor="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOk"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="0.4"
                android:background="@drawable/bordas_fundo"
                android:text="Enviar Mensagem"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_weight="0.4"
                android:background="@drawable/bordas_fundo"
                android:text="NÃ£o"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>